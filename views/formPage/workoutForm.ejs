<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Workout Form</title>
    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />

    <!-- formStyles.css -->
    <link rel="stylesheet" href="css/homeForm/formStyles.css" />

    <!-- Bootstrap 5 JS (with defer tag for adding in HTML head)-->
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <!-- Include jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Include TypeIt.js for type effect-->
    <script src="https://unpkg.com/typeit@8.7.1/dist/index.umd.js"></script>
  </head>
  <body>
    <nav
      class="navbar navbar-expand-lg fixed-top navbar-dark navbar-background"
      id="navbar"
    >
      <div class="container p-1">
        <a class="navbar-brand" href="/" style="font-weight: 700">HooBuff</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarToggler"
          aria-controls="navbarToggler"
          aria-expanded="false"
          aria-label="Toggle Navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarToggler">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a href="/" class="nav-link">Home</a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">About Us</a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">Exercise Info</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <section class="hero">
      <img
        src="img/homeForm/formPage-hero.jpg"
        alt="Hero Image"
        class="fade-in-top-img"
        id="hero-img"
      />
      <div
        class="container text-dark"
        id="hero-container"
        style="
          padding-left: 5em;
          padding-right: 5em;
          padding-bottom: 5em;
          padding-top: 8em;
        "
      >
        <h1 id="instruction"></h1>

        <form action="/loading" method="POST">
          <label for="category" class="form-label mb-1"
            ><p style="font-size: 1.7rem; font-weight: 500">Workout Category</p>
          </label>
          <select
            name="category"
            id="category"
            class="form-select mb-5"
            required
          >
            <% workoutCategory.forEach((category) => { %>
            <option value="<%= category.value %>" id="<%= category.value %>">
              <%= category.name %>
            </option>
            <% }); %>
          </select>

          <div class="form-questions">
            <div>
              <label for="muscle" class="form-label mb-1"
                ><p style="font-size: 1.7rem; font-weight: 500">
                  Select Target Muscle Group(s)
                </p>
              </label>
              <div class="checkbox-container" id="muscle">
                <% muscleGroup.forEach((muscle) => { %>
                <div class="form-check">
                  <input
                    type="checkbox"
                    class="form-check-input"
                    value="<%= muscle.value %>"
                    id="<%= muscle.value %>"
                  />
                  <label for="<%= muscle.value %>" class="form-check-label"
                    ><%= muscle.name %></label
                  >
                </div>
                <% }); %>
              </div>
            </div>

            <div>
              <label for="experience" class="form-label mb-1"
                ><p style="font-size: 1.7rem; font-weight: 500">
                  Gym Experience
                </p>
              </label>
              <input
                type="number"
                class="form-control"
                name="experience"
                id="experience"
                min="1"
                max="10"
                placeholder="Enter 1 through 10"
                required
              />
            </div>

            <div>
              <label for="time" class="form-label mb-1"
                ><p style="font-size: 1.7rem; font-weight: 500">
                  Select Total Workout Time
                </p>
              </label>
              <select
                name="time"
                id="time"
                class="form-select mb-5"
                required
                placeholder="--Total Workout Time--"
              >
                <option disabled selected class="default-category" value="">
                  --Total Workout Time--
                </option>
                <% for (let i = 1; i <= 6; i++) { %>
                <option value="<%= i * 30 %>"><%= i * 30 %> minutes</option>
                <% }; %>
                <option value="300+">More than 180 minutes</option>
              </select>
            </div>
          </div>
          <button class="btn btn-success submit-button mb-2" type="submit">
            Submit
          </button>
        </form>
      </div>
    </section>

    <script src="js/homeForm/formPage.js"></script>
    <script>
      // Pre-Filling Clothing Category Based on Answer to Previous Form
      document.querySelectorAll('option').selected = false;
      document.getElementById(<%= category %>.value).selected = true;

      // Form Validation
      const form = document.querySelector("form");

      form.addEventListener("submit", (e) => {
          let numChecked = $('input:checkbox:checked').length;    // Number of checkboxes that are checked
          if (numChecked == 0) {
              e.preventDefault();
              alert("Make sure at least one muscle group is selected");
          }

          if (!form.checkValidity()) {
              // Prevent form from submitting
              e.preventDefault();
          }
      });
    </script>
  </body>
</html>
